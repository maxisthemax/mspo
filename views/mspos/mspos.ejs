        <script>
            function openTabs(evt, tabname) {
                var i, tabcontent, tablinks;
                tabcontent = document.getElementsByClassName("tabcontent");
                for (i = 0; i < tabcontent.length; i++) {
                    tabcontent[i].style.display = "none";
                }
                tablinks = document.getElementsByClassName("tablinks");
                for (i = 0; i < tablinks.length; i++) {
                    tablinks[i].className = tablinks[i].className.replace(" active", "");
                }
                document.getElementById(tabname).style.display = "block";
                evt.currentTarget.className += " active";
                localStorage.setItem('activeMspo_Tab', tabname);
            }

            $(document).ready(function() {
                $(function() {
                    $('a').each(function() {
                        if ($(this).prop('href') == window.location.href) {
                            $(this).addClass('active');
                            $(this).parents('li').addClass('active');
                        }
                    });
                });

                tablinks = document.getElementsByClassName('tablinks');
                var activeMspo_Tab = localStorage.getItem('activeMspo_Tab');
                if (activeMspo_Tab === null || activeMspo_Tab == '') {
                    tablinks[0].click();
                } else {
                    for (i = 0; i < tablinks.length; i++) {
                        if (tablinks[i].value == activeMspo_Tab)
                            tablinks[i].click();
                    }
                }
            });
            $(function() {
                var chartformat = "YYYY-MM-DD";
                $('#expiredDatePicker').datetimepicker({
                    format: chartformat,
                    defaultDate: moment(),
                });
            });
            $("#custId").select2({
                placeholder: "Select a Customer",
                width: 'resolve',
            });
        </script>
