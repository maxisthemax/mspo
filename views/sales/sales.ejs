                <div class="row">
                    <div class="col-sm-6">
                    <label for="custId">Customer Name</label>
                        <select class="form-control mb-4" id="custId" name="custId" required style="width: 100%" onchange="configureDropDownLists(this,document.getElementById('landId'))">
