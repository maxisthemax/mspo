<style>
    .btnpadding {
        margin: 10px;
    }
</style>
<div id="transporter_buttons" class="p-5">
    <p class="h4 mb-4">Actions</p>
    <div class="row">
        <button type="button" class="btn btn-info btnpadding"
            onclick="var retVal = confirm('Do you want to restore this transporter ?');if (retVal == true) {location.href = '/transporter/restore/<%= transporter_s_disabled[5].data%>'};">Restore</button>
         <button type="button" class="btn btn-danger btnpadding"
            onclick="var retVal = confirm('Do you want to delete this transporter ? (This will permanently delete the transporter)');if (retVal == true) {location.href = '/transporter/delete/<%= transporter_s_disabled[5].data%>'};">Delete</button>
    </div>
</div>